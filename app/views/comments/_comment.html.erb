<% unless comment.archived? %>
  <div class="comment-box">
    <p class="comment-meta">
      <% if comment.user.image.attached? %>
        <%= image_tag comment.user.image, alt: "#{comment.user.name}'s profile picture", class: "commenter-image" %>
      <% else %>
        <%= image_tag "https://st3.depositphotos.com/9998432/13335/v/450/depositphotos_133352010-stock-illustration-default-placeholder-man-and-woman.jpg", alt: "Default profile picture", class: "commenter-image" %>
      <% end %>
      <%= comment.user.name %>
    </p>

    <p class="comment-body">
      <%= comment.body %>
    </p>

    <div class="comment-actions">
      <% if is_owner(comment) %>
        <%= link_to "Destroy Comment", [comment.article, comment], class: "btn btn-danger", data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %>
        
         <%= link_to "Edit Comment", edit_article_comment_path(comment.article, comment), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
