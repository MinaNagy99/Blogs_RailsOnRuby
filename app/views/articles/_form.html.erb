<%= form_with model: article, local: true, class: "article-form" do |form| %>


  <div class="form-group">
    <%= form.label :title, class: "form-label" %><br>
    <%= form.text_field :title, class: "form-control" %><br>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="error-message"><%= message %></div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :body, class: "form-label" %><br>
    <%= form.text_area :body, class: "form-control",rows:10 %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="error-message"><%= message %></div>
    <% end %>
  </div>

<div class="form-group">
<%= form.label :tags, "Select Tags", class: "form-label" %><br>
<%= form.select :tag_ids, options_for_select(Tag.all.collect { |t| [t.name, t.id] }, selected: article.tag_ids), {}, multiple: true, class: "form-control" %>
    <% article.errors.full_messages_for(:tags).each do |message| %>
      <div class="error-message"><%= message %></div>
    <% end %>
</div>





  <div class="form-group">
    <%= form.label :status, class: "form-label" %><br>
    <%= form.select :status, Visible::VALID_STATUSES, selected: article.status || 'public', class: "form-control" %>
  </div>




  <div class="form-group">
    <%= form.submit "Save Article", class: "btn btn-primary" %>
  </div>
<% end %>
